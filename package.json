{
  "name": "bun-bagel",
  "description": "ðŸ¥¯ The Bun fetch mocker with a hole lot of flavor.",
  "version": "1.0.1",
  "module": "src/index.ts",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun run build:bun && bun run build:emitDeclarations",
    "build:bun": "bun build ./src/index.ts --outdir dist --target bun --splitting --minify --sourcemap=inline",
    "build:emitDeclarations": "tsc --emitDeclarationOnly --project tsconfig.json --tsBuildInfoFile './dist/.tsbuildinfo'",
    "test": "bun test --coverage",
    "prepublish": "bun run build"
  },
  "devDependencies": {
    "bun-types": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}